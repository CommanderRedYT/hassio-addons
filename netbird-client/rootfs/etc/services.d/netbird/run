#!/command/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: ZeroTier One
# Runs ZeroTier One
# ==============================================================================
declare -a options

# Note sure what this does.
options+=(-U)
options+=("-p$(bashio::addon.port 9993)")

start_netbird()
{
	bashio::log.info "22 Installing NetBird Service..."
	rc-service /go/bin/netbird service install
	bashio::log.info "Starting NetBird Service..."
	netbird service start
	netbird status
	bashio::log.info "Starting NetBird Client..."
	netbird up --setup-key E5CDE011-C223-4908-BE87-159DBBEEBCD9
}

# Run the ZeroTier One
start_netbird
